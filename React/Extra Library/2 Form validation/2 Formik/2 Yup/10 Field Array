
import React from 'react';
import {Formik, Form, Field, ErrorMessage, FieldArray } from 'formik';
import * as Yup from 'yup';

function FormValidation(){

const initialValues = {
	name : "",
	email : "",
	channel : "",
	comments : "",
	address : "",
	social : {
		facebook : "",
		twitter : ""
	},
	phoneNumber: ["", ""],
	phNumbers : ['']
}

const onSubmit = values => {
	console.log("form data : ", values);
}



// this is schema validation
 const validationSchema = Yup.object({
 	name : Yup.string().required("Required !"),
 	email: Yup.string().email("Invalid email format").required("Required"),
 	channel : Yup.string().required("Required")
 })
 

     
    
    

	return(

		<Formik
			initialValues = {initialValues}
			validationSchema = {validationSchema}
			onSubmit = {onSubmit}
			>
		  <div className = "container">
		  	<Form className ="form-group">
		  		
		  		<div>
		  			 <label htmlFor = "name"> Name </label>
		  	 		 <Field className ="form-control" 
		  	 		 		type = "text" 
		  	 		 		id = "name" 
		  	 		 		name = "name" 
		  	 		 		 />
		  	 		 		
		  	 		 		
              		<ErrorMessage  name = "name" >
              		  {errorMsg=> <div className = "text-danger"> {errorMsg}</div>}
              		</ ErrorMessage>

            	</div>

            	<div>
		  	 		<label htmlFor = "email"> email </label>
		  	 		<Field className ="form-control" 
		  	 				type = "email" 
		  	 				id = "email" 
		  	 				name = "email" 
		  	 				/>
		  	 		<ErrorMessage  name = "email" >
              		  {errorMsg=> <div className = "text-danger"> {errorMsg}</div>}
              		</ ErrorMessage> 
		  	 	</div>

		  	 	<div>
		  	 		<label htmlFor = "channel"> channel </label>
		  	 		<Field className ="form-control" 
		  	 				type = "text" 
		  	 				id = "channel" 
		  	 				name = "channel" 
		  	 				/>
		     		<ErrorMessage  name = "channel" >
              		  {errorMsg=> <div className = "text-danger"> {errorMsg}</div>}
              		</ ErrorMessage>
		     	</div>

		     	<div>
		     		<label htmlFor ="comments" > Comments</label>
		     		<Field className ="form-control" as = "textarea" name = 'comments' /> 
		     	</div>

		     	<div>
		     		<label htmlFor = "address">Address </label>
		     		<Field name = 'address' className = "form-control"> 
		     			{
		     				(props)=> {
		     					const {field, form, meta} = props
		     					console.log("Render props", props)
		     					return (
		     						
		     						<div>
		     							<input type = "text" className ="form-control"{...field} /> 
		     							{meta.touched && meta.error? <div> {meta.error} </div>: null}
		     						</div>

		     						)
		     				}
		     			}
		     		</Field>
		     	</div>


		     		<div>
			     		<label htmlFor = "facebook" >Facebook </label> 
		     			<Field className = "form-control" type = "text" name = "social.facebook" />
		     		</div>

		     			

		     		<div>
		     			<label htmlFor = "twitter" >Twitter </label> 
		     			<Field className = "form-control" type = "text" name = "social.twitter" />
		     		</div>

					<div>
		     			<label htmlFor = "number" >Phone Number 1 </label> 
		     			<Field className = "form-control" type = "text" name = "phoneNumber[0]" />
		     		</div>

		     		<div>
		     			<label htmlFor = "number" >Phone Number 2 </label> 
		     			<Field className = "form-control" type = "text" name = "phoneNumber[1]" />
		     		</div>


		     		<div>
		     			<FieldArray name = "phNumbers">
		     				{
		     					fieldArrayProps => {
		     						console.log("fieldArrayProps", fieldArrayProps)
		     						const {push, remove, form} = fieldArrayProps
		     						const {values} = form
		     						const {phNumbers} = values
		     						return(
		     							 <div>	
		     							 	{phNumbers.map((phNumber, index)=>(
		     							 		<div key = {index}>
		     							 		 <Field name = {'phNumbers[${index}]'} />
		     							 		 {index > 0 &&(
		     							 		 	<button type = "button" onClick = {()=> remove(index)}>
		     							 		 		 { " "}
		     							 		 		 -
		     							 		 		 {" "}
		     							 		 	 </button>
		     							 		 	)}

		     							 		 	<button type = "button" onClick = {()=> push('')} >
		     							 		 	 { "  "}
		     							 		 	 + 
		     							 		 	 {" "}
		     							 		 	 </button>

		     							 		</div>
		     							 		))}

		     							 </div>

		     						)
		     					}
		     				}

		     			</FieldArray>

		     		</div>


                 
		     		<input type = "submit"  className = "form-control"/>
		    </Form>

		  
		    
		  </div>
		</Formik>


)
}


export default FormValidation;
